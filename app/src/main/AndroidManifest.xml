<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="maximomrtnz.podcastmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".PodcastManager">

        <!-- Main Activity -->
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- Content Provider -->
        <provider
            android:name=".database.PodcastManagerContentProvider"
            android:authorities="maximomrtnz.podcastmanager.database.podcastmanagercontentprovider"
            android:exported="true"
            android:multiprocess="true"></provider>

        <!-- Services -->
        <service
            android:name=".services.SynchronizeService"
            android:exported="false" />


        <!-- Broadcast Receivers -->
        <receiver android:name=".broadcastreceivers.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".broadcastreceivers.AlarmReceiver"
            android:process=":remote"></receiver>

        <service android:exported="false" android:name=".services.PlayerService">
            <intent-filter>
                <action android:name="maximomrtnz.podcastmanager.action.TOGGLE_PLAYBACK" />
                <action android:name="maximomrtnz.podcastmanager.action.PLAY" />
                <action android:name="maximomrtnz.podcastmanager.action.PAUSE" />
                <action android:name="maximomrtnz.podcastmanager.action.SKIP_NEXT" />
                <action android:name="maximomrtnz.podcastmanager.action.action.SKIP_PREVIUOS" />
                <action android:name="maximomrtnz.podcastmanager.action.action.STOP" />
                <action android:name="maximomrtnz.podcastmanager.action.ADD_TO_PLAY_QUEUE" />
            </intent-filter>
        </service>

        <receiver android:name=".broadcastreceivers.MusicIntentReceiver">
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <receiver android:name=".broadcastreceivers.NotificationBroadcast" >
            <intent-filter>
                <action android:name="maximomrtnz.podcastmanager.action.NOTIFICATION.PLAY_PAUSE" />
                <action android:name="maximomrtnz.podcastmanager.action.NOTIFICATION.SKIP_NEXT" />
                <action android:name="maximomrtnz.podcastmanager.action.NOTIFICATION.action.SKIP_PREVIUOS" />
            </intent-filter>
        </receiver>

    </application>

</manifest>